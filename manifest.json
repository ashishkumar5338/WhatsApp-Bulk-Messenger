{
  "manifest_version": 3,
  "name": "WhatsApp Bulk Messenger",
  "version": "2.1",
  "description": "Send bulk messages on WhatsApp Web",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "background",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "styles.css",
        "popup.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}